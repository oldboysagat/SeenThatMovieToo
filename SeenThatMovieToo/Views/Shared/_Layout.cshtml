<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title Seen That Movie Too</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/Images/movieLogo.png" alt=""/>
                        </a>
                    </p>
                </div>
                <div class="float-right"> 
                    <nav>
                        <div class="navbar navbar-default">
                            <section id="login">
                                @Html.Partial("_LoginPartial")
                            </section>
                            <ul id="menu">
                                <li class="navbar-brand">@Html.ActionLink("Home", "Index", "Home")</li>
                                <li class="navbar-brand">@Html.ActionLink("My Movie List", "Index", "Movies")</li>
                                <li class="navbar-brand">@Html.ActionLink("About", "About", "Home")</li>
                                <li class="navbar-brand">@Html.ActionLink("Contact", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Duncan Bridges.  Made with ASP.net</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
